@model List<string>

<!DOCTYPE html>
<html>
<head>
    <title>Sports List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1e1e2f;
            color: #d1d1e1;
        }
        h1 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
        }
        .sports-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }
        .sport-card {
            background-color: #292943;
            color: #ffffff;
            text-align: center;
            padding: 15px 30px;
            border-radius: 10px;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .sport-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h1>Sports List</h1>
    <div class="sports-container">
        @if (Model != null && Model.Any())
        {
            foreach (var sport in Model)
            {
                <a href="@Url.Action("Events", "Sports", new { sportName = sport })" class="sport-card">
                    @sport
                </a>
            }
        }
        else
        {
            <p>No sports available.</p>
        }
    </div>
</div>
</body>
</html>