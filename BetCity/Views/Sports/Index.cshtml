@model List<string>

<!DOCTYPE html>
<html>
<head>
    <title>Sports List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
<h1 class="mb-4">Sports List</h1>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var sport in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card rounded shadow-sm">
                    <div class="card-body text-center">
                        <a href="@Url.Action("Events", "Sports", new { sportName = sport })" class="stretched-link text-decoration-none text-dark">
                            <h5>@sport</h5>
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>No sports available.</p>
        </div>
    }
</div>
</body>
</html>
