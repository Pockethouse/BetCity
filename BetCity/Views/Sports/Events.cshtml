@model List<BetCity.Models.SportsEvent>

<!DOCTYPE html>
<html>
<head>
    <title>Events for @ViewBag.SportName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SportsEvents.css" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Events for @ViewBag.SportName</h1>
        <div class="events-table-container">
            <table class="table table-hover events-table">
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Team 1</th>
                        <th>Team 2</th>
                        <th>Score</th>
                        <th>Timer</th>
                        <th>Markets</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var eventItem in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("EventMarkets", "Sports", new { eventId = eventItem.eventId })">
                                        @eventItem.eventName
                                    </a>
                                </td>
                                <td>@eventItem.team1</td>
                                <td>@eventItem.team2</td>
                                <td>@eventItem.score</td>
                                <td>@eventItem.timer</td>
                                <td>
                                    <a href="@Url.Action("EventMarkets", "Sports", new { eventId = eventItem.eventId })" class="btn btn-primary btn-sm">
                                        View Markets
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No events available for this sport.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
