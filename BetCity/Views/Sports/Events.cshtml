@model List<BetCity.Models.SportsEvent>
@using System.Linq

<!DOCTYPE html>
<html>
<head>
    <title>Sport Events</title>
    <style>
        .scrollable-pane {
            max-height: calc(100vh - 150px); /* Adjust height dynamically based on viewport */
            overflow-y: auto;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Events for @ViewBag.SportName</h1>

        <!-- Scrollable Pane -->
        <div class="scrollable-pane">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Event Name</th>
                    <th>Team 1</th>
                    <th>Team 2</th>
                    <th>Score</th>
                    <th>Timer</th>
                    <th>Markets</th>
                </tr>
                </thead>
                <tbody>
                @if (Model?.Count > 0)
                {
                    foreach (var eventItem in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("EventMarkets", "Sports", new { eventId = eventItem.eventId })">
                                    @eventItem.eventName
                                </a>
                            </td>
                            <td>@eventItem.team1</td>
                            <td>@eventItem.team2</td>
                            <td>@eventItem.score</td>
                            <td>@eventItem.timer</td>
                            <td>
                                <a href="@Url.Action("EventMarkets", "Sports", new { eventId = eventItem.eventId })">View Markets</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No events available for this sport.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center bg-warning py-2 fixed-bottom">
        <span>&copy; 2024 - BetCity</span>
    </footer>
</body>
</html>
